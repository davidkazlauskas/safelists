#!/bin/bash

# $1 - file list to package
# $2 - base input directory (no trailing slash)
# $3 - output packaging directory

INPUT_FILE="$1"
BASE_INPUT_DIR="$2"
OUTPUT_DIR="$3"

mkdir -p "$OUTPUT_DIR"
mkdir -p "$OUTPUT_DIR/raw"

while read -r line || [[ -n "$line" ]]; do
    # skip comments
    if [[ $line != \#* ]];
    then
        echo "$line"
    fi
done < "$INPUT_FILE"
